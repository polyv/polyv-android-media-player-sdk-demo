<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plv_media_player_video_item_background_portrait">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/plv_media_player_entrance_feed_video_btn"
            android:layout_width="212dp"
            android:layout_height="108dp"
            android:layout_margin="16dp"
            android:background="@drawable/plv_media_player_entrance_feed_video_bg"
            android:gravity="start|top"
            android:padding="20dp"
            android:text="@string/plv_media_player_entrance_feed_video_text"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/plv_media_player_entrance_single_video_btn"
            android:layout_width="212dp"
            android:layout_height="108dp"
            android:layout_margin="16dp"
            android:background="@drawable/plv_media_player_entrance_single_video_bg"
            android:gravity="start|top"
            android:padding="20dp"
            android:text="@string/plv_media_player_entrance_single_video_text"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>