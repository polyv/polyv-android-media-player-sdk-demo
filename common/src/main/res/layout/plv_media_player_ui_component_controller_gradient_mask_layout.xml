<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <View
        android:id="@+id/plv_media_player_controller_gradient_mask_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/plv_media_player_controller_gradient_mask_top"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/plv_media_player_controller_gradient_mask_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/plv_media_player_controller_gradient_mask_bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>