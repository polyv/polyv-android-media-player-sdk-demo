<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/plv_media_player_ui_component_media_progress_text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:text="00:00" />

    <TextView
        android:id="@+id/plv_media_player_ui_component_media_progress_text_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:text="/"
        android:textColor="#99FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/plv_media_player_ui_component_media_progress_text_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99FFFFFF"
        android:textSize="20sp"
        tools:text="00:00" />

</LinearLayout>