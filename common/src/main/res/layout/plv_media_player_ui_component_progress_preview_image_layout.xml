<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <net.polyv.android.player.common.ui.component.PLVMediaPlayerSeekProgressPreviewTextView
        android:id="@+id/plv_media_player_seek_progress_preview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <net.polyv.android.player.common.utils.ui.PLVRoundRectConstraintLayout
        android:id="@+id/plv_media_player_seek_progress_preview_image_layout"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/plv_media_player_seek_progress_preview_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mode="all"
        app:radius="8dp">

        <ImageView
            android:id="@+id/plv_media_player_seek_progress_preview_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </net.polyv.android.player.common.utils.ui.PLVRoundRectConstraintLayout>


</android.support.constraint.ConstraintLayout>