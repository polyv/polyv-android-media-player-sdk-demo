<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#CC333333">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:background="@drawable/plv_media_player_more_action_layout_bg_portrait"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/plv_media_player_more_subtitle_setting_back_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:padding="14dp"
            android:src="@drawable/plv_media_player_back_icon"
            android:tint="#CC000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/plv_media_player_ui_component_subtitle_setting_text"
            android:textColor="#CC000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plv_media_player_more_subtitle_setting_show_switch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="@string/plv_media_player_ui_component_subtitle_setting_show_switch_label"
            android:textColor="#CC000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plv_media_player_more_subtitle_setting_back_iv" />

        <Switch
            android:id="@+id/plv_media_player_more_subtitle_setting_show_switch"
            android:layout_width="48dp"
            android:layout_height="34dp"
            android:padding="5dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintTop_toTopOf="@+id/plv_media_player_more_subtitle_setting_show_switch_label"
            app:layout_constraintBottom_toBottomOf="@+id/plv_media_player_more_subtitle_setting_show_switch_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:thumb="@drawable/plv_media_player_more_subtitle_switch_thumb_port"
            android:track="@drawable/plv_media_player_more_subtitle_switch_track_port" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/plv_media_player_more_subtitle_setting_show_switch_label"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/plv_media_player_more_subtitle_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>