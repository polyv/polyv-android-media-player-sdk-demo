<?xml version="1.0" encoding="utf-8"?>
<net.polyv.android.player.common.utils.ui.PLVTriangleIndicateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    app:indicateColor="#CC000000"
    app:rectRadius="8dp"
    app:triangleHeight="0dp"
    app:triangleMargin="14dp"
    app:triangleMarginType="right"
    app:trianglePosition="top"
    app:triangleWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plv_media_player_network_poor_indicate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="当前网络较差，可尝试切换到流畅" />

        <ImageView
            android:id="@+id/plv_media_player_network_poor_indicate_close_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:src="@drawable/plv_media_player_float_window_close_icon"
            android:tint="#CCCCCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/plv_media_player_network_poor_indicate_tv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</net.polyv.android.player.common.utils.ui.PLVTriangleIndicateLayout>