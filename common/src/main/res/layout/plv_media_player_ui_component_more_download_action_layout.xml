<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/plv_media_player_download_action_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/plv_media_player_more_download_action_icon" />

    <FrameLayout
        android:id="@+id/plv_media_player_download_progress_layout"
        android:layout_width="36dp"
        android:layout_height="36dp">

        <ProgressBar
            android:id="@+id/plv_media_player_download_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/plv_media_player_download_progress_bar_circle_style"
            tools:progress="80" />

        <TextView
            android:id="@+id/plv_media_player_download_progress_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0%"
            android:textColor="#3F76FC"
            android:textSize="12sp"
            tools:text="80%" />

    </FrameLayout>

    <TextView
        android:id="@+id/plv_media_player_download_action_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/plv_media_player_ui_component_download_text"
        android:textColor="#CC333333"
        android:textSize="12sp" />

</LinearLayout>